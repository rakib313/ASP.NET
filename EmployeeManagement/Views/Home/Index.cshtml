@model IEnumerable<Employee>

@{
    ViewBag.Title = "Employee List";
}



<div class="grid-wrapper">
    
    @foreach (var employee in Model)
    {
        var photoPath = "~/images/" + (employee.PhotoPath ?? "undraw.png");
        <div class="card" style="width: 18rem;">
            <img src="@photoPath" class="card-img-top imageThumbnail" alt="..." asp-append-version="true">
            <div class="card-body">
                <h5 class="card-title">@employee.Name</h5>
                
                <a asp-controller="home" asp-action="details" asp-route-id="@employee.Id" class="btn btn-primary">View</a>
                <a asp-controller="home" asp-action="edit" asp-route-id="@employee.Id" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    }

</div>


 
